# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Mode: 'mock' for local development, 'live' for production
MODE=mock

# Gmail Integration
GMAIL_API_KEY=your-gmail-api-key
GMAIL_CLIENT_ID=your-client-id
GMAIL_CLIENT_SECRET=your-client-secret
GMAIL_REFRESH_TOKEN=your-refresh-token

# HubSpot Integration  
HUBSPOT_API_KEY=your-hubspot-api-key

# Google Drive Integration (for storing documents)
GOOGLE_DRIVE_FOLDER_ID=your-folder-id
GOOGLE_DRIVE_API_KEY=your-drive-api-key

# Supabase Integration
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AI Service (e.g., OpenAI for email generation)
AI_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Application Settings
LOG_LEVEL=info
MOCK_DATA_DIR=./mock-data
NODE_ENV=development

# User Management (for approval tracking)
ADMIN_USER_ID=admin-user-id
ADMIN_EMAIL=admin@example.com
