{
  "name": "reachout-bot",
  "version": "0.1.0",
  "description": "Reach Out Bot MVP - NGO Outreach Campaign Automation",
  "main": "dist/backend/index.js",
  "type": "module",
  "scripts": {
    "dev": "ts-node backend/index.ts",
    "build": "tsc",
    "test": "ts-node tests/constraints.test.ts",
    "test:watch": "ts-node-dev --respawn tests/constraints.test.ts",
    "lint": "eslint . --ext .ts",
